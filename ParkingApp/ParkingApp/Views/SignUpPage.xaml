<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkingApp.Views.SignUpPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" HorizontalOptions="Center" Text="SIGN UP"
                   FontAttributes="Bold"
                   FontSize="30" Padding="10"/>

            <Entry x:Name="username" Grid.Row="1" Margin="10" IsPassword="False" Placeholder="Username"></Entry>
            <Entry x:Name="password" Grid.Row="2" Margin="10" IsPassword="True" Placeholder="Password"></Entry>
            <Button x:Name="SignUp" Grid.Row="3" Margin="10" Text="Sign Up" CornerRadius="20" Clicked="SignUp_Clicked"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>